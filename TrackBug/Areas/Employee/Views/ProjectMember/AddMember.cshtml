@model TrackBug.Models.ViewModels.ProjectMemberAddVM
@{
    ViewData["Title"] = "Add  Project Member";
}
@*<h1>Add  Project Member</h1>
</br>*@
<div class="row">
    <div class="col-md-9">
        <h1 class="modal-title">Add member to the project <strong>@Model.Project.Title</strong></h1>
        <hr/>
        <form asp-action="AddMember">
            <input type="hidden" asp-for="@Model.ProjectMember.ProjectId" />
            <input type="hidden" name="returnUrl" value="@Model.returnUrl" />
            <div class="form-group">
                <label asp-for="@Model.ProjectMember.ApplicationUser.Email" class="control-label"></label>
                <select asp-for="@Model.ProjectMember.ApplicationUserId" asp-items="@Model.ApplicationUserList" class="form-select">
                    <option disabled selected>--Select User--</option>
                </select>
                <span asp-validation-for="@Model.ProjectMember.ApplicationUserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary rounded" style="width:150px">Add</button>
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-area="Employee" asp-controller="Project" asp-action="Details" asp-route-id="@Model.ProjectMember.ProjectId">
        Back to Project Details
    </a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}